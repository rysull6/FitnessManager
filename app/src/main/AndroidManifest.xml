<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hci.ryan.fitnessmanager" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SetupRoutine.SetupRoutineActivity"
            android:label="Setup Routine"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".LogWorkout.LogWorkoutActivity"
            android:label="Log Workout"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ViewProfile.ViewProfileActivity"
            android:label="View Profile"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ViewProgress.ViewProgressActivity"
            android:label="View Progress"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".AddExercise.AddExerciseActivity"
            android:label="Add Exercise">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".OnboardingActivity"
            android:label="Welcome">
        </activity>
        <activity
            android:name=".OnboardingActivity2"
            android:label="Information and Goals">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".OnboardingActivity" />
        </activity>
        <activity
            android:name=".ViewProfile.ViewProfile2"
            android:label="Information and Goals">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ViewProfile.ViewProfileActivity" />
        </activity>
    </application>

</manifest>
